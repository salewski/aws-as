# Helper for __t_f_aws_as_try_set_profile_as()
# @param: PROFILE   (required; presumed validated)
# @param: FORCE_MFA (optional; defaults to 'false')
#
function __t_f_aws_as_try_set_profile_as_for_user () {

    local t_profile_name
    local t_force_mfa

    local t_user_arn
    local t_mfa_serial

    t_profile_name=$1

    t_force_mfa=false
    if test $# -gt 1; then
