# __t_v_aws_as_AWS_SECRET_ACCESS_KEY_hold=
# __t_v_aws_as_have_AWS_SECRET_ACCESS_KEY_hold=false
# if test "${AWS_SECRET_ACCESS_KEY:+is_set}" = 'is_set'; then
#     __t_v_aws_as_AWS_SECRET_ACCESS_KEY_hold=$AWS_SECRET_ACCESS_KEY
